<h1> <%= @album.title %> </h1>

<p align="center"><%= image_tag @album.image.url(:large) %> </p>

<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @album.date %>
</p>

<%= link_to 'Add Picture', new_picture_path(album_id: @album) %> |
<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>

<h3>Pictures:</h3>
<table>
  <tbody> <% @album.pictures.each do |picture| %>
    <tr id="picture_<%= picture.id %>">
      <td> <%= picture.title %> </td>
      <td> <%= link_to 'Show', picture %> </td>
      <td> <%= link_to 'Edit', edit_picture_path(picture) %> </td>
      <td> <%= link_to 'Destroy', picture, :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => true %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
