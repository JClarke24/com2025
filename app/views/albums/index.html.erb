<!-- Displays a list of all the albums-->

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.thtitle') %></th>
      <th><%= t('.thpicture') %></th>
      <th><%= t('.thdescription') %></th>
      <th><%= t('.thdate') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= image_tag album.image.url(:thumb) %></td>
        <td><%= album.description %></td>
        <td><%= album.date %></td>
        <td><%= link_to t('.show'), album %></td>
        <td><%= link_to t('.edit'), edit_album_path(album) %></td>
        <td><%= link_to t('.destroy'), album, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_album_path %>
