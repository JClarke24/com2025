<header>
  <table>
    <tr>
      <th><p> <%= link_to t('.back_home'), root_path %> </p></th>
      <th><p> <%= link_to t('.albums'), albums_path %> </p></th>
      <th><p> <%= link_to t('.contact_us'), contact_path %> </p></th>
      <th><p> <% if user_signed_in? %>
      <%= "#{current_user.email} |" %>
      <%= link_to t('profile'), edit_user_registration_path %> |
      <%= link_to t('logout'), destroy_user_session_path, method: 'delete' %>
      <% else %>
      <%= link_to t('login'), new_user_session_path %> |
      <%= link_to t('sign_up'), new_user_registration_path %>
      <% end %> </p></th>
    </tr>
  </table>

  <% flash.each do |key, value| %>
  <%= content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank? %>
  <% end %>
</header>
